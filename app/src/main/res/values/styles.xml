<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="fontFamily">@font/inder</item>

        <item name="android:fontFamily">@font/inder</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>

        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondaryVariant</item>
        <item name="colorOnSecondary">@color/onPrimary</item>

        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorSurface">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/onError</item>

        <item name="snackbarStyle">@style/snackbar</item>

        <item name="materialAlertDialogTheme">@style/Theme.MaterialComponents.Dialog.Alert</item>
    </style>

    <!-- Styles -->

    <style name="snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="animationMode">slide</item>
        <item name="android:layout_margin"/>
        <item name="android:layout_marginTop">@dimen/snackbar_margin_vertical</item>
        <item name="android:layout_marginBottom">@dimen/snackbar_margin_vertical</item>
        <item name="android:layout_marginStart">@dimen/snackbar_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/snackbar_margin_horizontal</item>
    </style>

    <!-- Themes -->

    <style name="AccentElevationOverlay">  <item name="elevationOverlayColor">?colorAccent</item> </style>
    <style name="PrimaryElevationOverlay"> <item name="elevationOverlayColor">?colorPrimary</item> </style>
I
    <style name="AlertOverride">       <item name="colorPrimary">@color/primary</item> </style>
    <style name="AlertOverride.Error"> <item name="colorPrimary">@color/error</item> </style>

</resources>
